<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:id="@+id/dls">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity">

        <TextView
            android:id="@+id/tvArbeit2"
            android:layout_width="152dp"
            android:layout_height="53dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="132dp"
            android:text="TextView"
            app:layout_constraintTop_toBottomOf="@+id/tvArbeit1"
            tools:layout_editor_absoluteX="116dp" />

        <TextView
            android:id="@+id/tvArbeit3"
            android:layout_width="152dp"
            android:layout_height="53dp"
            android:layout_centerInParent="true"
            android:text="TextView"
            app:layout_constraintTop_toBottomOf="@+id/tvArbeit2"
            tools:layout_editor_absoluteX="116dp" />

        <TextView
            android:id="@+id/tvArbeit4"
            android:layout_width="152dp"
            android:layout_height="53dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="132dp"
            android:text="TextView"
            app:layout_constraintTop_toBottomOf="@+id/tvArbeit3"
            tools:layout_editor_absoluteX="116dp" />

        <TextView
            android:id="@+id/tvArbeit5"
            android:layout_width="152dp"
            android:layout_height="53dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvArbeit4"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="116dp" />

        <TextView
            android:id="@+id/tvArbeit1"
            android:layout_width="152dp"
            android:layout_height="53dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:text="TextView"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="116dp" />
    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_viewa"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_headera"
        app:menu="@menu/navigation_menua">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>